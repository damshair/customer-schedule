    <script>
        let schedule = [
            {
                name: "John Doe",
                date: "2022-09-23",
                time: "1:30"
            },
            {
                name: "Jane Doe",
                date: "2022-10-11",
                time: "3:00"
            },
            {
                name: "Danny Thompson",
                date: "2022-01-02",
                time: "2:10"
            }
        ]
        const listTag = document.querySelector('.list') 
        const scheduleBtn = document.querySelector('#schedule') 
        const nameInput = document.querySelector('#name') 
        const dateInput = document.querySelector('#date') 
        const timeInput = document.querySelector('#time') 
        window.addEventListener("load", () => {
            schedule.map(item => {
                createListItem(item.name, item.date, item.time)
            })

            scheduleBtn.addEventListener("click", () => {
                if ( nameInput.value !== "" && dateInput.value !== "" && timeInput.value !== "" ) {
                    createListItem(nameInput.value, dateInput.value, timeInput.value)
    
                    nameInput.value = ""
                    dateInput.value = ""
                    timeInput.value = ""
                }
            })
        })

        const createListItem = (name, date, time) => {
            let newPTag = document.createElement('p')
            let newSpan1 = document.createElement('span')
            let newSpan2 = document.createElement('span')
            newPTag.classList.add("list_item")
            newSpan1.innerHTML = name
            newSpan2.innerHTML = `${date} - ${time}`
            newPTag.appendChild(newSpan1)
            newPTag.appendChild(newSpan2)
            listTag.appendChild(newPTag)
        }
    </script>
